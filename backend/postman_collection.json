					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res && res.accessToken) { pm.collectionVariables.set('token', res.accessToken); }"
								],
								"type": "text/javascript"
							}
						}
					]
				},
